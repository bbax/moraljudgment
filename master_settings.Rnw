library(knitr)

# Function to return standardized p-values for reporting significance tests
report.pval <- function(pval){
    if (pval < 0.001) {
        new.pval <- 0.001
    } else if (pval < 0.01) {
        new.pval <- 0.01
    } else if (pval < 0.05) {
        new.pval <- 0.05
    } else if (pval < 0.1) {
        new.pval <- 0.1
    } else {
        new.pval <- "n.s."
    }
    return(new.pval)
}

report.pval.symbol <- function(pval){
    if (pval < 0.001) {
        new.pval <- "***"
    } else if (pval < 0.01) {
        new.pval <- "**"
    } else if (pval < 0.05) {
        new.pval <- "*"
    } else if (pval < 0.1) {
        new.pval <- "^"
    } else {
        new.pval <- ""
    }
    return(new.pval)
}

median.test <- function(x, y){
    z <- c(x, y)
    g <- rep(1:2, c(length(x), length(y)))
    m <- median(z)
    fisher.test(z < m, g)$p.value
    #fisher.test(z != m, g)$p.value
}

# Cohen's D from http://stackoverflow.com/questions/15436702/estimate-cohens-d-for-effect-size
cohens_d <- function(x, y) {
    lx <- length(x)- 1
    ly <- length(y)- 1
    md  <- abs(mean(x) - mean(y))        ## mean difference (numerator)
    csd <- lx * var(x) + ly * var(y)
    csd <- csd/(lx + ly)
    csd <- sqrt(csd)                     ## common sd computation

    cd  <- md/csd                        ## cohen's d
}


